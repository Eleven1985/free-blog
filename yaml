name: Daily Node Fetch
on:
  schedule:
    - cron: '0 0 * * *'  # 每日UTC 0点运行
jobs:
  fetch-and-encrypt:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'
      - name: Install dependencies
        run: pip install cryptography requests
      - name: Run fetch script
        env:
          ENCRYPT_PUBLIC_KEY: ${{ secrets.ENCRYPT_PUBLIC_KEY }}  # 公钥存入GitHub Secrets
        run: python fetch_nodes.py
      - name: Commit encrypted data
        run: |
          git config user.name "github-actions"
          git config user.email "actions@github.com"
          git add encrypted_nodes.bin
          git commit -m "Auto-update encrypted nodes"
          git push
